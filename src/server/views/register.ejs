<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <link rel="stylesheet" href="css/register.css">
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
</head>
<body>
    <!-- Header -->
    <div class="header">
        <a href="/">URL Shortner</a>
    </div>

    <!-- error message -->
    <% if(locals.data.errorMessage) { %>
        <div class ="error-message">
            <div id="close-error"> 
                X
            </div>    
            <%= locals.data.errorMessage.message  %> 
        </div>
    <% } %> 
    <div class="container register">
        <div class="row">
            <div class="col-md-3 register-left">
                <img src="https://image.ibb.co/n7oTvU/logo_white.png" alt="" />
                <h3>Welcome</h3>
                <p>You are 30 seconds away from joining us!</p>
                <a href="/login"><input type="submit" name="" value="Login" /><br /></a>
            </div>
            <div class="col-md-9 register-right">
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                        <h3 class="register-heading">Apply as a Employee</h3>
                        <!-- Register form -->
                        <form action="/register" method='POST'>
                            <div class="row register-form">
                                <!-- left part -->
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="firstName">First name</label>
                                        <input type="text" class="form-control" placeholder="First Name *"
                                            name="firstName" />
                                    </div>
                                    <div class="form-group">
                                        <label for="lastName">Last name</label>
                                        <input type="text" class="form-control" placeholder="Last Name *"
                                            name="lastName" />
                                    </div>
                                    <div class="form-group">
                                        <label for="email">Email</label>
                                        <input type="email" class="form-control" placeholder="Your Email *" value="<%= locals.data.email %> "
                                            name="email" />
                                    </div>
                                    
                                </div>
                                <!-- right part -->
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="password">Password</label>
                                        <input type="password" class="form-control" placeholder="Password *"
                                            name="password" />
                                    </div>
                                    <div class="form-group">
                                        <label for="confirmPassword">Confirm Password</label>
                                        <input type="password" class="form-control" placeholder="Confirm Password *"
                                            name="confirmPassword" />
                                    </div>
                                    <div class="form-group">
                                        <label for="phoneNumber">Phone Number</label>
                                        <input type="text" minlength="10" maxlength="10" class="form-control"
                                            placeholder="Your Phone *" name="phoneNumber" />
                                    </div>
                                    <button type="submit" name="button" class="btnRegister">Register</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

<!-- script -->
<script src="js/register.js"></script>
</body>

</html>